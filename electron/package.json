{
  "name": "grimoire",
  "version": "0.1.0",
  "main": "dist/main.js",
  "scripts": {
    "app:debug": "tsc && concurrently \" electron .\" \"tsc -w\"",
    "app:dev": "tsc && concurrently \" electron .\" \"tsc -w\"",
    "app:build": "tsc && electron-builder",
    "app:build-win": "tsc && electron-builder --win",
    "tsc": "tsc",
    "test": "jest"
  },
  "build": {
    "productName": "grimoire",
    "appId": "darq.grimoire",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "../release/win"
    },
    "files": [
      "dist/**/*",
      "../dist/**/*"
    ],
    "mac": {
      "artifactName": "${productName}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "publisherName": "darc.i_shinya",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false,
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-shinya/grimoire.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/i-shinya/grimoire/issues"
  },
  "homepage": "https://github.com/i-shinya/grimoire#readme",
  "dependencies": {
    "electron-devtools-installer": "^3.2.0",
    "electron-store": "^8.1.0",
    "exifr": "^7.1.3",
    "vite-plugin-electron": "^0.11.1",
    "vite-plugin-electron-renderer": "^0.11.4"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "concurrently": "^7.2.2",
    "electron": "^22.2.0",
    "electron-builder": "^22.10.3",
    "eslint": "^8.34.0",
    "jest": "^29.4.1",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.5.4",
    "vite": "^2.9.9"
  }
}
