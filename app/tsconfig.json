{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "CommonJS", // esnextでは動かない
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "outDir": "dist" // coreへの参照が入ったせいで"dist/electron"だとディレクトリ階層が変わってしまった
  },
  "include": ["src/electron/**/*"], // vueやtsをincludeするとエラーになる
  "exclude": ["src/electron/**/*.spec.ts"], // vueやtsをincludeするとエラーになる
  "references": [{ "path": "./tsconfig.node.json" }]
}
